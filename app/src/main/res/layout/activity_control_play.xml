<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1">

    <RelativeLayout
        android:id="@+id/rl_table_flat"
        android:layout_centerInParent="true"
        android:background="@drawable/icon_ban_co"
        android:layout_width="305dp"
        android:layout_height="305dp">

        <GridView
            android:id="@+id/gv_table_flat"
            android:layout_width="305dp"
            android:layout_height="305dp"
            android:layout_centerInParent="true"
            android:clipChildren="true"
            android:columnWidth="120dp"
            android:gravity="center"
            android:numColumns="5"
            android:stretchMode="columnWidth"/>
    </RelativeLayout>

    <ImageButton
        android:id="@+id/img_btn_forward"
        android:background="@drawable/icon_forward"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/rl_table_flat"
        android:layout_alignLeft="@+id/rl_table_flat" />
    <ImageButton
        android:id="@+id/btn_resume_playing"
        android:background="@drawable/resume"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/rl_table_flat"
        android:layout_alignEnd="@+id/rl_table_flat"
        android:layout_alignRight="@+id/rl_table_flat"/>
</RelativeLayout>